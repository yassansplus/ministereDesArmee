{% extends 'dashboard.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
    <h1>Home index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>MainTitle</th>
        </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.mainTitle }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('back_home_show', {'id': home.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('back_home_edit', {'id': home.id}) }}">edit</a>
                    <a class="btn btn-danger"
                       href="{{ path('back_home_delete', {'id': home.id}) }}">{{ include('home/_delete_form.html.twig') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_home_new') }}">Create new</a>
{% endblock %}
