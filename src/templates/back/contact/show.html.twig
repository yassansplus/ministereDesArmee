{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1 class="font-weight-bold mb-4">Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Photo_url</th>
                <td>{{ contact.photoUrl }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contact.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_contact_index') }}">Retour au menu</a>

    <a href="{{ path('back_contact_edit', {'id': contact.id}) }}">Editer</a>

    {{ include('back/contact/_delete_form.html.twig') }}
{% endblock %}
