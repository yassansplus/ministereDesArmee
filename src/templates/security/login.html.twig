{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    html, body {
        height: 100%;
    }
    </style>
{% endblock %}


{% block body %}
<section class="container mt-5 pt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-xl-6 col-md-8 col-10">
            <form method="post">
                <div class="row flex-column justify-content-center text-center">
                    <div>PROFIL LOGO</div>
                    <div>
                        <h1 class="h3 mb-3 font-weight-normal title-blue font-weight-bold mb-4">Connexion</h1>
                    </div>
                </div>

                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-4" required autofocus placeholder="Nom d'utilisateur">
                
                <input type="password" name="password" id="inputPassword" class="form-control mb-4" required placeholder="Mot de passe">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="row justify-content-center">
                    <button class="btn btn-primary px-4 font-weight-bold" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

{% endblock %}
